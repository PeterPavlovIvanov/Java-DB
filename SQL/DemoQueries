(PRICE, ITEM_NAME, CUSTOMER_ID)
VALUES (399, 'Pewdiepies Chair', 1),
(33, 'Just Chair', 2)
Go

SELECT * FROM CITIES
SELECT * FROM CUSTOMERS
SELECT * FROM JOBS
SELECT * FROM [ORDERS]
GO

CREATE UNIQUE INDEX UX_CUSTOMERS_UCN
ON CUSTOMERS(UCN)
GO

DROP INDEX UX_CUSTOMERS_UCN
ON CUSTOMERS
GO

-- basic join takes all non nulls
SELECT FIRST_NAME, LAST_NAME, AGE, PRICE, ITEM_NAME
FROM CUSTOMERS
INNER JOIN ORDERS
ON CUSTOMERS.ID = ORDERS.CUSTOMER_ID

-- left join takes all the elements from the first table even if there is null in the second table
SELECT FIRST_NAME, LAST_NAME, AGE, PRICE, ITEM_NAME
FROM CUSTOMERS
LEFT JOIN ORDERS
ON CUSTOMERS.ID = ORDERS.CUSTOMER_ID

-- oposite of left join
SELECT  PRICE, ITEM_NAME, FIRST_NAME, LAST_NAME, AGE
FROM ORDERS
RIGHT JOIN CUSTOMERS
ON ORDERS.CUSTOMER_ID = CUSTOMERS.ID

-- left join + right join
SELECT PRICE, FIRST_NAME, LAST_NAME, AGE, ITEM_NAME
FROM ORDERS
FULL OUTER JOIN CUSTOMERS
ON ORDERS.CUSTOMER_ID = CUSTOMERS.ID
GO

IF EXISTS(select * FROM sys.views where name = 'ALL_JOBS_CUSTOMERS')
	DROP VIEW ALL_JOBS_CUSTOMERS
IF EXISTS(select * FROM sys.procedures where name = 'SelectAllCustomers')
	DROP PROCEDURE SelectAllCustomers
GO 

CREATE VIEW ALL_JOBS_CUSTOMERS AS 
	SELECT JOBS.NAME, FIRST_NAME, LAST_NAME 
	FROM JOBS
	LEFT JOIN CUSTOMERS
	ON CUSTOMERS.JOB_ID = JOBS.ID
GO

CREATE PROCEDURE SelectAllCustomers AS
SELECT * FROM CUSTOMERS;
GO

DECLARE @buy VARCHAR(20);  
SELECT @buy = 'MyTransaction';  
BEGIN TRANSACTION @buy
	INSERT ORDERS
	(PRICE, ITEM_NAME, CUSTOMER_ID)
	VALUES (399, 'Pewdiepies Chair', 3)
	
	INSERT ORDERS
	(PRICE, ITEM_NAME, CUSTOMER_ID)
	VALUES (33, 'Some Other Chair', 3)

COMMIT TRANSACTION @buy;

EXEC SelectAllCustomers;
SELECT * FROM ORDERS;
